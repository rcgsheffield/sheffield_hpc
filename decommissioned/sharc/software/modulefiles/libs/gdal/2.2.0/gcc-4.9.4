#%Module1.0#####################################################################
##
## gdal module file
##

## Module file logging
source /usr/local/etc/module_logging.tcl

proc ModulesHelp { } {
    global gdalversion
    global compiler
    global compilervers
    puts stderr "   Activate v$gdalversion of the GDAL translator library (plus $compiler $compilervers) for raster and vector geospatial data formats"
}

set gdalversion  2.2.0
set compiler     gcc
set compilervers 4.9.4

module-whatis   "Activate v$gdalversion of the GDAL translator library (plus $compiler $compilervers) for raster and vector geospatial data formats"

set gdalroot /usr/local/packages/libs/gdal/$gdalversion/$compiler-$compilervers/

# Need a particular version of the C++ std lib
module load dev/$compiler-$compilervers

prepend-path CPATH $gdalroot/include
prepend-path LIBRARY_PATH $gdalroot/lib/
prepend-path LD_LIBRARY_PATH $gdalroot/lib/
prepend-path MANPATH $gdalroot/share/man/
prepend-path PATH $gdalroot/bin/
