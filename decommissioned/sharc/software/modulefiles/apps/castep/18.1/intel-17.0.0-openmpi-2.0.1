#%Module1.0#####################################################################
##
## CASTEP 18.1 module file
##

## Module file logging
source /usr/local/etc/module_logging.tcl

set vers 18.1

proc ModulesHelp { } {
        global vers

        puts stderr "	Adds `CASTEP-$vers' with MPI support to your PATH environment"
}
module-whatis "	Adds `CASTEP-$vers' with MPI support to your PATH environment"

module load dev/intel-compilers/17.0.0
module load libs/intel-mkl/2017.0/binary
module load mpi/openmpi/2.0.1/intel-17.0.0

set casteppath /usr/local/packages/apps/castep/$vers/intel-17.0.0-openmpi-2.0.1/bin
prepend-path PATH $casteppath
