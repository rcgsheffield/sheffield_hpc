# Module file logging
source /usr/local/etc/module_logging.tcl

proc ModulesHelp { } {
        global vers
        global compiler
        global compilervers
        global mpi
        global mpivers

        puts stderr "   Makes libmboard $vers (used by FLAME) available (plus $mpi $mpivers built with $compiler $compilervers)."
}

set vers 0.3.1
set compiler gcc
set compilervers 6.2
set mpi openmpi
set mpivers 2.1.1

set prefix /usr/local/packages/libs/libmboard/$vers/$compiler-$compilervers-$mpi-$mpivers

module-whatis "Makes libmboard $vers (used by FLAME) available (plus $mpi $mpivers built with $compiler $compilervers)."

module load mpi/$mpi/$mpivers/$compiler-$compilervers

prepend-path PATH $prefix/bin
prepend-path CPATH $prefix/include
prepend-path LD_LIBRARY_PATH $prefix/lib
prepend-path LIBRARY_PATH $prefix/lib
