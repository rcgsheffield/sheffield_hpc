#%Module1.0#####################################################################
##
## SIESTA 4.0.1 module file
##

## Module file logging
source /usr/local/etc/module_logging.tcl

set vers 4.0.1

proc ModulesHelp { } {
        global vers

        puts stderr "	Adds `SIESTA-$vers' MPI-parallel code to your PATH environment"
}
module-whatis "	Adds `SIESTA-$vers' MPI-parallel code to your PATH environment"

module load mpi/openmpi/2.0.1/intel-17.0.0
module load libs/intel-mkl/2017.0/binary

set siestapath /usr/local/packages/apps/siesta/$vers/intel-17.0.0-openmpi-2.0.1/bin
prepend-path PATH $siestapath
