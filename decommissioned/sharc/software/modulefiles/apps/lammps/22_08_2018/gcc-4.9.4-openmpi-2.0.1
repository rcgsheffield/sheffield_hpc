#%Module1.0#####################################################################
##
## LAMMPS module file
##

## Module file logging
source /usr/local/etc/module_logging.tcl
##

proc ModulesHelp { } {
        puts stderr "Adds LAMMPS 22_08_2018 to your environment"
	puts stderr "and loads compiler gcc/4.9.4 & openmpi/2.0.1"
}

module-whatis   "Makes LAMMPS 22_08_2018 available"

if { [ module-info mode load ] } {
    puts stderr "NOTE: the LAMMPS module loads the gcc-4.9.4 compiler, openmpi/2.0.1 and the blas,lapack & ffmpeg libraries"
}

module load mpi/openmpi/2.0.1/gcc-4.9.4
module load libs/blas/3.4.2-5/binary
module load apps/ffmpeg/4.1/gcc-4.9.4
module load libs/lapack/3.4.2-5/binary

prepend-path PATH /usr/local/packages/apps/lammps/22_08_2018/gcc-4.9.4-openmpi-2.0.1/bin/
