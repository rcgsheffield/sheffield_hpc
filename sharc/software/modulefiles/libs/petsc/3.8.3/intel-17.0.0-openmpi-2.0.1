#%Module1.0#####################################################################
##
## PETSC module file
##

## Module file logging
source /usr/local/etc/module_logging.tcl

set petscvers 3.8.3
set compiler intel
set compilervers 17.0.0
set mpi openmpi
set mpivers 2.0.1

proc ModulesHelp { } {
        global petscvers
        puts stderr "Makes PETSC version $petscvers library available (plus $compiler compiler and $mpi $mpivers)"
}
module-whatis   "Makes PETSC version $petscvers library available (plus $compiler compiler and $mpi $mpivers)"

module load mpi/$mpi/$mpivers/$compiler-$compilervers

set petschome /usr/local/packages/libs/petsc/$petscvers/$compiler-$compilervers-$mpi-$mpivers
setenv PETSC_DIR $petschome 
prepend-path CPATH $petschome/include
prepend-path LD_LIBRARY_PATH $petschome/lib
prepend-path LIBRARY_PATH $petschome/lib
prepend-path PATH $petschome/bin
